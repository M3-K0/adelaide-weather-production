  "weatherScenarios": {
    "typicalSummer": {
      "description": "Typical Adelaide summer day",
      "horizon": "24h",
      "variables": ["t2m", "u10", "v10", "msl", "cape"],
      "expectedResponse": {
        "t2m": { "value": 32.5, "p05": 28.2, "p95": 36.8, "available": true },
        "u10": { "value": -2.1, "p05": -5.3, "p95": 1.1, "available": true },
        "v10": { "value": 1.8, "p05": -1.2, "p95": 4.8, "available": true },
        "msl": { "value": 101650, "p05": 101200, "p95": 102100, "available": true },
        "cape": { "value": 450, "p05": 120, "p95": 780, "available": true }
      },
      "expectedRisks": {
        "thunderstorm": "low",
        "heat_stress": "moderate",
        "wind_damage": "minimal",
        "precipitation": "low"
      }
    },
    
    "extremeHeat": {
      "description": "Extreme heat wave conditions",
      "horizon": "24h",
      "variables": ["t2m", "u10", "v10", "msl", "cape"],
      "expectedResponse": {
        "t2m": { "value": 42.3, "p05": 39.1, "p95": 45.5, "available": true },
        "u10": { "value": -1.2, "p05": -3.8, "p95": 1.4, "available": true },
        "v10": { "value": 0.8, "p05": -2.1, "p95": 3.7, "available": true },
        "msl": { "value": 101820, "p05": 101400, "p95": 102240, "available": true },
        "cape": { "value": 250, "p05": 80, "p95": 420, "available": true }
      },
      "expectedRisks": {
        "thunderstorm": "minimal",
        "heat_stress": "extreme",
        "wind_damage": "minimal",
        "precipitation": "low"
      }
    },
    
    "severeStorm": {
      "description": "Severe thunderstorm potential",
      "horizon": "12h",
      "variables": ["t2m", "u10", "v10", "msl", "cape"],
      "expectedResponse": {
        "t2m": { "value": 28.7, "p05": 25.4, "p95": 32.0, "available": true },
        "u10": { "value": -8.3, "p05": -12.7, "p95": -3.9, "available": true },
        "v10": { "value": 6.2, "p05": 2.8, "p95": 9.6, "available": true },
        "msl": { "value": 100980, "p05": 100600, "p95": 101360, "available": true },
        "cape": { "value": 2350, "p05": 1800, "p95": 2900, "available": true }
      },
      "expectedRisks": {
        "thunderstorm": "extreme",
        "heat_stress": "moderate",
        "wind_damage": "high",
        "precipitation": "high"
      }
    },
    
    "windyConditions": {
      "description": "High wind conditions",
      "horizon": "6h",
      "variables": ["t2m", "u10", "v10", "msl"],
      "expectedResponse": {
        "t2m": { "value": 18.5, "p05": 16.2, "p95": 20.8, "available": true },
        "u10": { "value": -15.2, "p05": -18.6, "p95": -11.8, "available": true },
        "v10": { "value": 12.8, "p05": 9.4, "p95": 16.2, "available": true },
        "msl": { "value": 99850, "p05": 99400, "p95": 100300, "available": true }
      },
      "expectedRisks": {
        "thunderstorm": "low",
        "heat_stress": "minimal",
        "wind_damage": "extreme",
        "precipitation": "moderate"
      }
    },
    
    "mildWinter": {
      "description": "Mild winter day",
      "horizon": "48h",
      "variables": ["t2m", "u10", "v10", "msl"],
      "expectedResponse": {
        "t2m": { "value": 14.2, "p05": 11.8, "p95": 16.6, "available": true },
        "u10": { "value": -3.4, "p05": -6.1, "p95": -0.7, "available": true },
        "v10": { "value": 2.1, "p05": -0.5, "p95": 4.7, "available": true },
        "msl": { "value": 102150, "p05": 101800, "p95": 102500, "available": true }
      },
      "expectedRisks": {
        "thunderstorm": "minimal",
        "heat_stress": "minimal",
        "wind_damage": "low",
        "precipitation": "low"
      }
    }
