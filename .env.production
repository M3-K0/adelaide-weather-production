# Production Environment Variables for Adelaide Weather Forecasting System
# Copy this file to .env in production and update values

# API Configuration
API_TOKEN=your-secure-production-token-here-change-this
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com
LOG_LEVEL=INFO
ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Performance Settings
PERFORMANCE_CACHE_TTL=300

# Database (if using external database)
# DATABASE_URL=postgresql://user:password@host:port/database

# Monitoring
GRAFANA_PASSWORD=secure-grafana-password-change-this

# Frontend
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# SSL/TLS (for HTTPS setup)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Backup and Storage
# BACKUP_STORAGE_PATH=/data/backups
# LOG_STORAGE_PATH=/data/logs