# Adelaide Weather Forecasting - Production Environment
# Copy this file to .env for production deployment
# ⚠️  CRITICAL: Replace all default values with secure credentials!

# Environment Configuration
ENVIRONMENT=production
NODE_ENV=production

# API Configuration (⚠️ MUST BE CHANGED FOR PRODUCTION!)
API_TOKEN=CHANGE-ME-TO-SECURE-PRODUCTION-TOKEN
CORS_ORIGINS=https://your-domain.com
LOG_LEVEL=WARN
RATE_LIMIT_PER_MINUTE=60

# Performance Settings
PERFORMANCE_CACHE_TTL=300

# Security Settings (⚠️ CRITICAL - CHANGE ALL PASSWORDS!)
GRAFANA_PASSWORD=CHANGE-ME-TO-SECURE-PASSWORD

# Database/Cache Configuration
REDIS_URL=redis://redis:6379
REDIS_MAX_MEMORY=256mb
REDIS_PASSWORD=CHANGE-ME-TO-SECURE-REDIS-PASSWORD

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Production Monitoring
ENABLE_MONITORING=true
PROMETHEUS_RETENTION=15d
METRICS_COLLECTION_INTERVAL=30

# Quality Assurance
ENABLE_DATA_VALIDATION=true
VALIDATION_THRESHOLD=0.98
ENABLE_QUALITY_METRICS=true

# Production Security
SECURITY_HEADERS=true
RATE_LIMITING=strict
ACCESS_LOGGING=full

# Alert Configuration
ALERT_EMAIL=alerts@your-domain.com
ALERT_WEBHOOK=https://your-alerting-system.com/webhook

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true