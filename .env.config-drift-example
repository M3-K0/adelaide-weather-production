# Configuration Drift Detection Environment Variables
# Copy this file to .env.config-drift for actual use

# Basic Configuration
ENVIRONMENT=development
CONFIG_DRIFT_ENABLED=true
CONFIG_DRIFT_CHECK_INTERVAL=300
CONFIG_DRIFT_NOTIFICATION_THRESHOLD=3

# File Monitoring
CONFIG_DRIFT_WATCH_PATHS=api/main.py,core/model_loader.py,nginx/nginx.conf
CONFIG_DRIFT_IGNORE_PATTERNS=*.pyc,*.log,__pycache__

# Security Monitoring
CONFIG_DRIFT_MONITOR_PERMISSIONS=true
CONFIG_DRIFT_MONITOR_OWNERSHIP=true
CONFIG_DRIFT_ALERT_ON_INSECURE_VALUES=true

# Alerting Configuration
CONFIG_DRIFT_ALERT_ENABLED=true
CONFIG_DRIFT_ALERT_SEVERITY=warning

# Notification Settings (replace with your actual endpoints)
CONFIG_DRIFT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK_HERE
CONFIG_DRIFT_EMAIL_ENABLED=false
CONFIG_DRIFT_EMAIL_TO=alerts@yourcompany.com

# Logging
CONFIG_DRIFT_LOG_LEVEL=INFO
CONFIG_DRIFT_LOG_FILE=logs/config_drift.log

# Validation
CONFIG_DRIFT_VALIDATE_YAML=true
CONFIG_DRIFT_VALIDATE_JSON=true
CONFIG_DRIFT_VALIDATE_DOCKER_COMPOSE=true

# Performance
CONFIG_DRIFT_MAX_FILE_SIZE_MB=50
CONFIG_DRIFT_CONCURRENT_CHECKS=5